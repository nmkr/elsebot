{% extends 'base.twig' %}

{% block content %}
	<div class="account-block six columns">
		<p>Please login to start adding Ideas and Comments</p>
		{% if flash.info %}<div class="alert-box success">{{ flash.info }}</div>{% endif %}
		{% if flash.error %}<div class="alert-box alert">{{ flash.error }}</div>{% endif %}
		<form action="{{ urlFor('login') }}" method="post">
			<div class="row">
				<div class="twelve columns">
					<input name="username" type="text" placeholder="Username" />
				</div>
				<div class="ten columns">
					<input name="password" type="password" placeholder="Password" />
				</div>

				<div class="two columns">
					<input class="small radius button" type="submit" value="Login">
				</div>

				<div class="twelve column">
					<a href="{{ urlFor('forgot_password') }}">Forgot your password?</a>
				</div>
			</div> 
		</form>
	</div>
{% endblock %}