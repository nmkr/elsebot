			<div id="idea-{{ idea.id }}" class="idea">
				<div class="left-content seven columns">
					<h2>
						{% if singleView == false %}
						<a href="{{ urlFor('idea', {'id': idea.id}) }}">{{ idea.title }}</a>
						{% else %}
						{{ idea.title }}
						{% endif %}
					</h2>
					<div class="content">{{ idea.content }}</div>
					<div class="date">posted {{ idea.date|date("F j, Y \\a\\t g:ia") }}</div>
				</div>
				<div class="right-content three columns">
					<h4>Rate my idea</h4>
					{{ Ratings.bar(idea.id,'5') }}
				</div>
			</div>